<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ezen.burger.dao.IEventDao">
	<select id="getAllEvents" resultType="com.ezen.burger.dto.EventVO">
		select * from event order by eseq asc 	
	</select>
	
	<select id="getOngoingEvents" resultType="com.ezen.burger.dto.EventVO">
		select * from event where state = ${param1} order by eseq asc 
	</select>
	
	<select id="getPastEvents" resultType="com.ezen.burger.dto.EventVO">
		select * from event where state = ${param2} order by eseq asc 	
	</select>
</mapper>